<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.golde.cowrywise.ApiKeyActivity">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Api Key"
            style="@style/MontsTextAppearance"
            android:ems="10"
            android:id="@+id/input_api"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"/>

    <com.google.android.material.button.MaterialButton
            app:layout_constraintTop_toBottomOf="@id/input_api"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/enter_api_btn"
            android:fontFamily="@font/monts_bold"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_height="wrap_content"

            android:gravity="center_vertical|center_horizontal"
            app:backgroundTint="@color/colorAccent"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/white"
            android:text="Convert" />

    <TextView
            android:text="@string/api_key_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/api_msg"
            style="@style/MontsTextAppearance"
            app:layout_constraintTop_toBottomOf="@id/enter_api_btn" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@id/enter_api_btn"
            android:gravity="start"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="@id/enter_api_btn" android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
