<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scrollbars="none"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/container" android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/landing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/white"
                android:elevation="0dp"
                android:theme="@style/ToolbarTheme"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cc"
                android:textSize="50sp"
                android:textColor="@color/colorAccent2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/monts_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/landing_toolbar"
        />

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:secondaryColor="@color/grey"
                app:primaryColor="@color/grey"
                app:panelBackgroundColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/input_from"
                    app:suffix=" USD"
                    app:suffixTextColor="@color/grey2"
                    android:text="1"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/monts_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:enabled="false"
                app:secondaryColor="@color/grey"
                app:primaryColor="@color/grey"
                app:panelBackgroundColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/from">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/input_to"
                    app:suffix=" NGN"
                    app:suffixTextColor="@color/grey2"
                    android:text="1"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:fontFamily="@font/monts_bold"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <LinearLayout
                android:id="@+id/conver_slc_layout"
                app:layout_constraintTop_toBottomOf="@id/to"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/from_btn"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    app:icon="@drawable/ic_keyboard_arrow_down_black_24dp"
                    app:iconGravity="end"
                    android:fontFamily="@font/monts_bold"
                    android:textSize="16sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:iconTint="@color/grey2"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/grey2"
                    android:text="NGN" />

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/grey2"
                    android:src="@drawable/ic_swap_horiz_black_24dp"
            />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/to_btn"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/monts_bold"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    app:icon="@drawable/ic_keyboard_arrow_down_black_24dp"
                    app:iconGravity="end"
                    android:textSize="16sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:iconTint="@color/grey2"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/grey2"
                    android:text="NGN" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                app:layout_constraintTop_toBottomOf="@id/conver_slc_layout"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/convert_btn"
                android:fontFamily="@font/monts_bold"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content"

                android:gravity="center_vertical|center_horizontal"
                app:backgroundTint="@color/colorAccent"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@android:color/white"
                android:text="Convert" />

        <TextView
                android:id="@+id/rates_info"
                app:layout_constraintTop_toBottomOf="@id/convert_btn"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent2"
                android:text="@string/rates_info"
        />

        <androidx.cardview.widget.CardView
                android:id="@+id/chartcard"
                app:cardElevation="0dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/colorAccent2"
                app:layout_constraintTop_toBottomOf="@id/rates_info"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="500dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/thirty_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/monts_bold"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button"
                        app:backgroundTint="@color/colorAccent"
                        android:textSize="13sp"
                        android:elevation="0dp"
                        app:strokeColor="@color/colorAccent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="false"
                        android:gravity="center_vertical|start"
                        android:textColor="@color/colorPrimary"
                        android:text="Past 30 days" />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/ninety_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/monts_bold"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textSize="13sp"
                        app:strokeColor="@color/colorAccent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="false"
                        android:gravity="center_vertical|start"
                        android:textColor="@color/colorPrimary"
                        android:text="Past 90 days" />

                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ninety_btn"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center_vertical"/>

                <ProgressBar
                        android:id="@+id/pbar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:elevation="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/thirty_btn"
                        app:layout_constraintBottom_toTopOf="@id/chart"
                />

                <TextView
                        android:id="@+id/email_info"
                        app:layout_constraintTop_toBottomOf="@id/chart"
                        android:layout_marginTop="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/email_info"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <View android:layout_width="match_parent" android:background="@color/colorAccent2" app:layout_constraintBottom_toBottomOf="parent" android:layout_height="40dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>