<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="md_corner_radius">16dp</item>
        <item name="md_color_title">@color/black</item>
        <item name="md_color_content">@color/grey2</item>
        <item name="md_color_button_text">@color/colorAccent2</item>
        <item name="md_font_title">@font/monts_bold</item>
        <item name="md_font_body">@font/monts_semibold</item>
        <item name="md_font_button">@font/monts_regular</item>

    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/MontsBoldTextAppearance</item>
    </style>

    <style name="MontsBoldTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/monts_bold</item>
    </style>

</resources>
